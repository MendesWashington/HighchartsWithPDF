      <h5>RELATÓRIO DE ACOMPANHAMENTO</h5>
    </div>
    <div style="border: 1px solid red; background: red"></div>

    <p style="font-size: 0.7rem"><b>Cliente</b>: Hospital Ortopedico</p>
    <p style="font-size: 0.7rem">
      <b>Equipamento</b>: SIGNA FSA Endereço: Av. Getúlio Vargas, 909 - Centro,
      Feira de Santana - BA
    </p>
    <p style="font-size: 0.7rem"><b>Responsável</b>: Soraya Freitas</p>
    <p style="font-size: 0.7rem"><b>Nº Série</b>: 0</p>
    <p style="font-size: 0.7rem"><b>NF-e</b>: 0000000000000</p>
    <p style="font-size: 0.7rem"><b>Período</b>: 01/05/2022 a 31/05/2022</p>
    <p style="font-size: 0.7rem"><b>Telefone</b>: (75) 3321-905</p>
    <p style="font-size: 0.7rem"><b>CNPJ</b>: 03.611.193/0001-05</p>

    <figure class="highcharts-figure">
      <div id="notification"></div>
    </figure>

    <script>
      const chart = Highcharts.chart("notification", {
        chart: {
          type: "column",
        },

        title: {
          text: "HISTÓRICO DE NOTIFICAÇÕES",
        },
        subtitle: {
          text: "ENVIADAS PARA O USUÁRIO",
        },
        xAxis: {
          categories: ["14/03/2022", "15/03/2022", "16/03/2022", "17/03/2022"],
        },
        yAxis: {
          min: 0,
          title: {
            text: "Qtd de notificações enviadas",
          },
        },
        tooltip: {
          pointFormat:
            '<span style="color:{series.color}">{series.name}</span>: <b>{point.y}</b> ({point.percentage:.0f}%)<br/>',
          shared: true,
          footerFormat: "<br/><b>Total:  {point.total} </b>",
        },
        plotOptions: {
          column: {
            stacking: "number",
          },
        },
        series: [
          {
            name: "WhatsApp",
            data: [5, 3, 4, 7],
          },
          {
            name: "App",
            data: [5, 5, 4, 3],
          },
          {
            name: "SMS",
            data: [2, 2, 3, 2],
          },
        ],
      });
      chart.render();
      chart.exportChart({
        format: "png",
      });
    </script>
  </body>
</html>
